<%- include('./partials/head'); %> 
<%- include('./partials/header'); %> 

    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img src="/images/carousel-1.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
          <img src="/images/carousel-2.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
          <img src="/images/carousel-3.jpg" class="d-block w-100" alt="...">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden"></span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden"></span>
      </a>
    </div>

    
    <main class="container">
     <section class="receitas">
       <h2>Receitas</h2>
       <p>Abaixo Receitas Mais Usadas</p>
       <div class="card-deck">
         
         <% cards.forEach(card => { %>
          <div class="col-12 col-md-6 col-lg-4 mt-3">
            <div class="card-deck" style="width: 18rem;">
              <img src="<%= card.caminho_de_imagem %>" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title"><%= card.titulo %></h5>
                <p class="card-text"><%= card.texto %></p>
                <a href="#" class="btn btn-primary"><%= card.botao %></a>
              </div>
            </div>
          </div>
         <% }) %>
        <%  %>
       </div>
     </section>

     <section class="localizacao mt-5">
      <h2>Localização</h2>
      <p> Verifique a Localização da Nossa Loja</p>
      <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3653.902967277634!2d-46.57753108466638!3d-23.679427784624394!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x94ce4375683ee771%3A0x47863c4b01d19329!2sR.%20Moacir%20Padilha%2C%20111%20-%20Ch%C3%A1cara%20Sergipe%2C%20S%C3%A3o%20Bernardo%20do%20Campo%20-%20SP%2C%2009894-280!5e0!3m2!1spt-BR!2sbr!4v1607388125936!5m2!1spt-BR!2sbr" width="100%" height="450" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
    </section>

     <section class="formulario mt-5" id="formulario">
      <h2>Envie suas receitas</h2>
      <p>Preencha o formulário abaixo para compartilhar conosco sua receita</p>
      <form action="/recipes/save" method="POST">
        <div class="row">
          <div class="col">
            <label for="nome">Nome</label>
            <input type="text" class="form-control" name="name" id="nome" placeholder="Informe seu nome" aria-label="Informe seu nome">
          </div>
          <div class="col">
            <label for="email">Email</label>
            <input type="text" class="form-control" name="email" id="email" placeholder="Informe seu e-mail" aria-label="Informe seu e-mail">
          </div>
        </div>
        <div class="row">
          <div class="col my-3">
            <label for="mensagem">Mensagem</label>
            <textarea class="form-control" name="mensagem" id="message" rows="10" placeholder="Informe a receita" aria-label="Informe a receita"></textarea>
          </div>
        </div>
        <button type="submit" class="btn btn-primary">Enviar</button>
      </form>
    </section>

    </main>

    <%- include('./partials/footer'); %> 
  </body>
  </html>
